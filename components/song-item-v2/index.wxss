/* components/song-item-v2/index.wxss */
.item {
  display: flex;
  align-items: center;
  margin: 36rpx 0 10rpx;
}

.index {
  width: 50rpx;
  padding: 12rpx;
  font-size: 30rpx;
  text-align: center;
}

.info {
  flex: 1;
  margin-left: 16rpx;
}

.info .name {
  font-size: 30rpx;
}

.info .name, .info .text {
  /* 一行文本 */
  white-space: normal;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  display: -moz-box;
  -moz-line-clamp: 1;
  -moz-box-orient: vertical;
  text-overflow: ellipsis;
  word-wrap: break-word;
  word-break: break-all;
}

.info .source {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  margin-top: 10rpx;
  color: #666;
}

.source .icon {
  width: 38rpx;
  height: 22rpx;
  margin-right: 10rpx;
  margin-top: 2rpx;
}

.source .dot {
  margin: 0 6rpx;
}

