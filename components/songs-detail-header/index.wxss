/* components/song-detail-header/index.wxss */
.header {
  width: 100vw;
  display: flex;
  flex-direction: column;
  position: relative;
  left: -20rpx;
  height: 450rpx;
  color: #fff;
}

.header .bg-image {
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.header .bg-cover {
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .5);
  backdrop-filter: blur(5px);
}

.content {
  display: flex;
  /* margin-top: 60rpx;
  padding: 0 50rpx; */
  margin: 60rpx 50rpx 0;
}

.content .image {
  width: 220rpx;
  height: 220rpx;
}

.content .info {
  position: relative;
  flex: 1;
  height: 220rpx;
  margin-left: 50rpx;
}

.content .author {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.content .author .avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
}

.content .author .nickname {
  font-size: 24rpx;
  margin-left: 18rpx;
}

.content .info .desc {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  /* display: inline-block; */
  /* margin-top: 30rpx; */
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.operation {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
  margin-top: 30rpx;
}

.operation .favor,
.operation .share {
  display: flex;
  align-items: center;
}

.operation .favor .icon,
.operation .share .icon {
  width: 48rpx;
  margin-right: 10rpx;
}

.operation .favor .text,
.operation .share .text {
  font-size: 28rpx;
}