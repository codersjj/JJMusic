/* components/ranking-area-item/index.wxss */
.item {
  display: flex;
  justify-content: space-between;
  /* width: 355px; */
  background-color: #eee;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  /* overflow: hidden; */
}

.content {
  flex: 1;
  padding: 24rpx;
  overflow: hidden;
}

.content-title {
  font-size: 34rpx;
  font-weight: 700;
}

.content-list {
  font-size: 24rpx;
  width: 100%;
  margin-top: 6rpx;
}

.content-list-item {
  color: #333;
  margin-top: 6rpx;
  width: 100%;

  display: inline-block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  /* text-emphasis: none; */
}

.content-list-item .singer {
  color: #999;
}

.album {
  position: relative;
  /* display: flex; */
  width: 220rpx;
}

.album .image {
  width: 100%;
  height: 100%;
  /* display: block; */
}

.album .play-count {
  position: absolute;
  right: 0;
  bottom: 0;
  font-size: 22rpx;
  background: rgba(0, 0, 0, .5);
  color: #fff;
  border-radius: 10rpx;
  padding: 6rpx 10rpx;
}