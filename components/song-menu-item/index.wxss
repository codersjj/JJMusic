/* components/song-menu-item/index.wxss */
.item {
  display: inline-block;
  width: 100%;
}

.top {
  position: relative;
}

.top .image {
  width: 100%;
  border-radius: 12rpx;
  background-size: cover;
  /* vertical-align: bottom; */
}

.top .play-count {
  position: absolute;
  right: 0;
  bottom: 10rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, .5);
  border-radius: 12rpx;
  font-size: 22rpx;
  padding: 6rpx 10rpx;
}

.item .bottom {
  width: 100%;
  font-size: 26rpx;

  /* 显示两行文本 */
  white-space: normal;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  display: -moz-box;
  -moz-line-clamp: 2;
  -moz-box-orient: vertical;
  text-overflow: ellipsis;
  word-wrap: break-word;
  word-break: break-all;
}