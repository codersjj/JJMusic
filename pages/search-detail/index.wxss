/* pages/search-detail/index.wxss */
page {
  padding: 0 20rpx;
}

/* 热门搜索 */
.hot {
  padding: 10rpx;
}

.hot .keyword-list {
  display: flex;
  flex-wrap: wrap;
}

.hot .tag {
  margin: 20rpx 20rpx 0 0;
  padding: 10rpx 12rpx;
  border-radius: 16rpx;
  background-color: #fff;
  font-size: 26rpx;
}

.hot .tag:first-of-type {
  color: #26ce8a;
}

/* 搜索建议 */
.suggest {
  padding: 10rpx;
}

.suggest .title {
  color: #26ce8a;
  font-size: 34rpx;
  /* font-weight: 700; */
}

.suggest .item {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
}

.suggest .item .icon {
  width: 66rpx;
  /* 指定高度，以防止图片加载时出现拉扯感，抖动感。 */
  height: 66rpx;
  margin-left: -10rpx;
}

.suggest .item .text {
  font-size: 28rpx;
}
